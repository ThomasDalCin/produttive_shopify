<div class="container mx-auto h-auto p-4 flex flex-col gap-y-4 sm:p-8 sm:gap-y-8">

  <div class="w-full h-auto flex justify-start items-start p-4">
    <h2 class="text-5xl">{{ section.settings.section_heading }}</h2>
  </div>

  {% for block in section.blocks %}
    {% if block.type == 'old_events' %}
      <div class="w-full h-auto relative bg-bg-light flex flex-col gap-y-4 p-6 sm:gap-y-8 sm:p-8">
        <h3 class="absolute right-0 -top-3 text-2xl font-bold uppercase sm:-top-5 heading-custom">Relive our Events</h3>
        <div class="flex items-center justify-start">
          <div class="flex flex-1 h-auto">
            <h3 class="text-2xl">{{ block.settings.event_title }}</h3>
          </div>
          <div class="w-auto h-auto">
            {% render 'arrow-up' %}
          </div>
        </div>
        <div class="flex items-start justify-start">
          <p class="text-base">{{ block.settings.event_description }}</p>
        </div>
        <div class="flex items-start justify-start h-auto w-full flex-col gap-y-8" id="content-images">
          <div class="w-full h-500 sm:h-600 md:h-700">
            <img
              id="main-img"
              class="w-full h-full object-cover object-center"
              src="{{ block.settings.event_image | img_url: 'master' }}"
              alt="{{ block.settings.event_image.alt | escape }}">
          </div>
          <div class="w-full h-auto flex flex-row gap-x-2" id="container-images">
            {% assign event_images = "event_image_1,event_image_2,event_image_3,event_image_4,event_image_5," | split: ',' %}
            {% for image in event_images %}
              {% assign image_url = block.settings[image] | img_url: 'master' %}
              {% if image_url %}
                <img
                  src="{{ image_url }}"
                  class="aspect-square object-cover object-center cursor-pointer"
                  style="width: calc((100% - (4 * 0.5rem)) / 5)"
                  alt="Event Image {{ forloop.index }}">
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>

    {% elsif block.type == 'oncoming_events' %}
      <div class="w-full h-auto relative bg-bg-secondary flex flex-col gap-y-4 p-6  sm:gap-y-8 sm:p-8">
        <h3 class="absolute right-0 -top-3 text-2xl font-bold uppercase sm:-top-5 heading-custom">Save the date</h3>
        <div class="w-full h-auto flex flex-row gap-x-6 items-start justify-start">
          <div class="flex flex-row gap-x-2 items-center justify-start">
            {% render 'calendar' %}
            <p class="text-base font-bold">{{ block.settings.event_date }}</p>
          </div>
          <div class="flex flex-row gap-x-2 items-center justify-start">
            {% render 'earth' %}
            <p class="text-base font-bold">{{ block.settings.event_place }}</p>
          </div>
        </div>
        <div class="flex items-start justify-start">
          <p class="text-base">{{ block.settings.event_description }}</p>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

<script>
  //set images selections
   const allImages = Array.from(document.getElementById('container-images').children);
   const mainImg = document.getElementById('main-img');
   allImages.forEach((image)=>{
      image.addEventListener('click', (e) =>{
        let mainSrc = mainImg.getAttribute('src');
        let imgClicked = e.currentTarget;
        let currentSrc = imgClicked.currentSrc;
        if(mainSrc != currentSrc) {
           mainImg.setAttribute('src', currentSrc)
        } 
      })
   })
  
  //set hide/expand section
  document.addEventListener('DOMContentLoaded', () => {
      const content = document.getElementById('content-images');
      const arrow = document.getElementById('arrow-up');
  
      const classes = ['flex', 'items-start', 'justify-start', 'h-auto', 'w-full', 'flex-col', 'gap-y-8'];
      content.classList.remove(...classes);
      content.classList.add('hidden');
  
      arrow.addEventListener('click', () => {
        content.classList.toggle('hidden');
        for(let i = 0; i < classes.length; i++){
          content.classList.toggle(classes[i])
        }
        arrow.classList.toggle('rotate-180');
      });
    });
</script>

