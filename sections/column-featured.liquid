<div class="w-full h-auto p-8 flex-col">
  <div class="w-full h-auto flex justify-start items-start">
    <h2 class="text-xl">{{ section.settings.section_heading }}</h2>
  </div>
  <div class="flex">
    <div class="w-1/2 flex flex-col justify-start items-start">
      <h3 class="text-lg">{{ section.settings.column_heading_first }}</h3>
    </div>
    <div class="w-1/2">
      <h3 class="text-lg">{{ section.settings.column_heading_second }}</h3>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "featured-column",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Titolo sezione",
        "info": "Inserisci qui il titolo della sezione"
      }, {

        "type": "text",
        "id": "column_heading_first",
        "label": "Titolo colonna",
        "info": "Inserisci qui il titolo della colonna"
      }, {
        "type": "text",
        "id": "column_heading_second",
        "label": "Titolo colonna",
        "info": "Inserisci qui il titolo della colonna"
      }

    ]
  }
{% endschema %}