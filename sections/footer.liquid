<div class="w-full h-auto" style="background-color: #1A1A1A;">
    <div class="container h-auto p-8 flex flex-col gap-y-8 sm:flex-row sm:gap-x-2">
        <div class="flex flex-col gap-y-2 w-full sm:w-1/3">
          <a href="#" class="text-white underline  text-base">Company</a>
          <a href="#" class="text-white underline  text-base">Benefit</a>
          <a href="#" class="text-white underline  text-base">Events</a>
          <a href="#" class="text-white underline text-base">Contacts</a>
        </div>
        <div class="flex flex-col gap-y-2 w-full sm:flex-1">
            <h5 class="text-2xl font-medium text-white">{{ section.settings.company_name }}</h5>
            <div class="w-full h-auto flex flex-col gap-y-1">
                <p class="text-base text-white"> {{ section.settings.company_address_one }} </p>
                <p class="text-base text-white"> {{ section.settings.company_address_two }} </p>
                <a href="#" class="text-white underline  text-base">{{ section.settings.company_email }}</a>
            </div>
            <a href="#" class="text-white underline  text-base">Privacy</a>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "footer",
    "settings": [
        {
        "type": "text",
        "id": "company_name",
        "label": "Nome Produttiva",
        "default": "ADRIANA.TEX d.o.o",
        "info": "Inserisci qui il nome della produttiva."
      },
      {
        "type": "textarea",
        "id": "company_address_one",
        "label": "Info address produttiva",
        "default": "Industrijska 106",
        "info": "Inserisci qui le informazioni della produttiva."
      },
      {
        "type": "text",
        "id": "company_address_two",
        "label": "Info address produttiva",
        "default": "22400 Ruma",
        "info": "Inserisci qui le informazioni della produttiva."
      },
      {
        "type": "text",
        "id": "company_email",
        "label": "Email produttiva",
        "default": "info@adrianatext.com",
        "info": "Inserisci email della produttiva."
      }
        ]
}
{% endschema %}