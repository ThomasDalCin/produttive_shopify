<div class="flex flex-col w-full h-auto p-8 gap-y-12">

  <div class="flex flex-row gap-x-8 p-4">

    <div class="w-1/2 flex justify-start items-start gap-y-4">
      <div class="w-full h-auto flex justify-start items-start relative">
        <img
          class="object-cover object-center w-full h-400 absolute z-0"
          src="{{ section.settings.testimonial_img_one | img_url : 'master' }}"
          alt="{{ section.settings.testimonial_img_one |  alt }}">
        <div class="w-full h-auto p-4 text-left absolute z-10 left-0 top-0 right-0">
          <p class="text-base">{{ section.settings.interview_text_one }}</p>
        </div>
      </div>
    </div>

    <div class="w-1/2 flex justify-start items-start gap-y-4">
      <div class="w-full h-auto flex justify-start items-start relative">
        <img
          class="object-cover object-center w-full h-400 absolute z-0"
          src="{{ section.settings.testimonial_img_two | img_url : 'master' }}"
          alt="{{ section.settings.testimonial_img_one | alt }}">
        <div class="w-full h-auto p-4 text-left  absolute z-10 left-0 top-0 right-0">
          <p class="text-base">{{ section.settings.interview_text_two }}</p>
        </div>
      </div>
    </div>
  </div>

</div>


