<div class="flex flex-col w-full h-auto p-8 gap-y-12">
  <div class="flex flex-row gap-x-8 p-4">
    <div class="w-1/2 flex justify-start items-start gap-y-4">
      <div class="relative w-full h-500">
        <img
          class="object-cover w-full h-full absolute z-0"
          src="{{ section.settings.testimonial_img_one | img_url: 'master' | default: 'assets/default_image_one.jpg' }}"
          alt="{{ section.settings.testimonial_img_one.alt | default: 'Default alt text for image one' }}">
        <div class="flex absolute bottom-0 left-0 w-full p-4 text-left bg-white bg-opacity-70 z-10">
          <p class="text-base">{{ section.settings.interview_text_one }}</p>
        </div>
      </div>
    </div>

    <div class="w-1/2 flex justify-start items-start gap-y-4">
      <div class="relative w-full h-500">
        <img
          class="object-cover w-full h-full absolute z-0"
          src="{{ section.settings.testimonial_img_two | img_url: 'master' | default: 'assets/default_image_two.jpg' }}"
          alt="{{ section.settings.testimonial_img_two.alt | default: 'Default alt text for image two' }}">
        <div class="flex absolute bottom-0 left-0 w-full p-4 text-left bg-white bg-opacity-70 z-10">
          <p class="text-base">{{ section.settings.interview_text_two }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "testimonials",
  "settings": [
    {
      "type": "image_picker",
      "id": "testimonial_img_one",
      "label": "Immagine Testimonial",
      "info": "Inserisci l'immagine dell'intervista"
    },
    {
      "type": "image_picker",
      "id": "testimonial_img_two",
      "label": "Immagine Testimonial",
      "info": "Inserisci l'immagine dell'intervista"
    },
    {
      "type": "textarea",
      "id": "interview_text_one",
      "label": "Testo Testimonial",
      "info": "Inserisci il testo dell'intervista"
    },
    {
      "type": "textarea",
      "id": "interview_text_two",
      "label": "Testo Testimonial",
      "info": "Inserisci il testo dell'intervista"
    }
  ],
  "presets": [
    {
      "name": "testimonials",
      "settings": {
        "interview_text_one": "Questo è un esempio di testo per la prima intervista.",
        "interview_text_two": "Questo è un esempio di testo per la seconda intervista."
      }
    }
  ]
}
{% endschema %}
